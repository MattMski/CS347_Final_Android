<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.jedi819.stream_h2o">


    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_app_h2o"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_app_h2o_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashActivity"
            android:label="@string/app_name"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity
            android:name=".HomeActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ScienceActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".TechnologyActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ReadingActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SocialStudiesActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ArtsActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MathActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".BatteryActivity"
            android:label="@string/BatterySettings"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.jedi819.stream_h2o.ToolsActivity" />
        </activity>
        <activity
            android:name=".ToolsActivity"
            android:label="@string/pref_title_tools_settings"
            android:theme="@style/AppTheme.NoActionBar"
            android:parentActivityName=".HomeActivity">
            <!-- The meta-data element is needed for versions lower than 4.1 -->
            <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value="com.example.jedi819.stream_h2o.HomeActivity" />
        </activity>
        <activity
            android:name=".ColorActivity"
            android:label="@string/colors"
            android:theme="@style/AppTheme.NoActionBar"
            android:parentActivityName=".HomeActivity">
        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value="com.example.jedi819.stream_h2o.HomeActivity" />
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".HomeActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.jedi819.stream_h2o.HomeActivity" />
        </activity>
        <activity
            android:name=".AboutActivity"
            android:label="@string/aboutactivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:parentActivityName=".HomeActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.jedi819.stream_h2o.HomeActivity" />

        </activity>
        <activity
            android:name=".MapsActivity"
            android:label="@string/app_name">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.jedi819.stream_h2o.ToolsActivity" />
        </activity>
        <activity
            android:name=".WeatherActivity"
            android:label="Weather"
            android:theme="@style/AppTheme.NoActionBar"
            android:parentActivityName=".ToolsActivity">
            <!-- The meta-data element is needed for versions lower than 4.1 -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.jedi819.stream_h2o.ToolsActivity" />
        </activity>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />
    </application>

</manifest>